// Place your key bindings in this file to override the defaultsauto[]
[
    {
        "key": "tab",
        "command": "-insertSnippet",
        "when": "editorTextFocus && hasSnippetCompletions && !editorTabMovesFocus && !inSnippetMode"
    },
    {
        "key": "alt+space",
        "command": "editor.action.showSnippets"
    }, 

    // Place your key bindings in this file to override the defaults

    // Latex Style based keybindings.
    {
        "key": "ctrl+shift+B",
        "command": "editor.action.insertSnippet",
        "when": "editorLangId == latex && editorTextFocus",
        "args": {
            "snippet": "\\textbf{${TM_SELECTED_TEXT}$0}"
        }
    },
    {
        "key": "ctrl+shift+I",
        "command": "editor.action.insertSnippet",
        "when": "editorLangId == latex && editorTextFocus",  // chained clause
        "args": {
            "snippet": "\\textit{${TM_SELECTED_TEXT}$0}"
        }
    },

    // Markdown Math: Maco
    
    { 
        // Radical
        "key": "cmd+enter 2",
            "command": "editor.action.insertSnippet",
            "when": "editorLangId == 'markdown' && editorTextFocus || editorTextFocus && editorLangId == 'latex'",
            "args": {
                "name": "sqrt"
            }
    },
    {
        "key": "cmd+enter /",
            "command": "editor.action.insertSnippet",
            "when": "editorLangId == 'markdown' && editorTextFocus || editorTextFocus && editorLangId == 'latex'",
            "args": {
                "name": "frac"
            }
    },
    {
        "key": "cmd+enter shift+[", 
            "command": "editor.action.insertSnippet",
            "when": "editorLangId == 'markdown' && editorTextFocus || editorTextFocus && editorLangId == 'latex'",
            "args": {
                "name": "bigbrace"
            }
    }, 
    {
        "key": "cmd+enter [", 
            "command": "editor.action.insertSnippet",
            "when": "editorLangId == 'markdown' && editorTextFocus || editorTextFocus && editorLangId == 'latex'",
            "args": {
                "name": "BigBracket"
            }
    }, 
    {
        "key": "cmd+enter 9", 
            "command": "editor.action.insertSnippet",
            "when": "editorLangId == 'markdown' && editorTextFocus || editorTextFocus && editorLangId == 'latex'",
            "args": {
                "name": "parenthesis"
            }
    },
    
    {
