// Place your key bindings in this file to override the defaultsauto[]
[
    // Show and select snippets
    {
        "key": "tab",
        "command": "-insertSnippet",
        "when": "editorTextFocus && hasSnippetCompletions && !editorTabMovesFocus && !inSnippetMode"
    },
    {
        "key": "alt+space",
        "command": "editor.action.showSnippets"
    }, 

    // Place your key bindings in this file to override the defaults

    // Latex Style based keybindings:
    {
        "key": "ctrl+shift+B",
        "command": "editor.action.insertSnippet",
        "when": "editorLangId == latex && editorTextFocus",
        "args": {
            "snippet": "\\textbf{${TM_SELECTED_TEXT}$0}"
        }
    },
    {
        "key": "ctrl+shift+I",
        "command": "editor.action.insertSnippet",
        "when": "editorLangId == latex && editorTextFocus",  // chained clause
        "args": {
            "snippet": "\\textit{${TM_SELECTED_TEXT}$0}"
        }
    },
    {
        "key": "alt+enter alt+m",
        "command": "editor.action.insertSnippet",
        "when": "editorLangId == latex && editorTextFocus", 
        "args":{
            "name":"mathmode"
        }
    },
    {
        "key": "alt+enter alt+shift+m",
        "command": "editor.action.insertSnippet",
        "when": "editorLangId == latex && editorTextFocus", 
        "args":{
            "name":"Mathmode"
        }
    },


    // Markdown Math and Latex Math keyboard shortcut: 
    { 
        // Radical
        "key": "alt+enter 2",
            "command": "editor.action.insertSnippet",
            "when": "editorLangId == 'markdown' && editorTextFocus || editorTextFocus && editorLangId == 'latex'",
            "args": {
                "name": "sqrt"
            }
    },
    {
        "key": "alt+enter /",
            "command": "editor.action.insertSnippet",
            "when": "editorLangId == 'markdown' && editorTextFocus || editorTextFocus && editorLangId == 'latex'",
            "args": {
                "name": "frac"
            }
    },
    {
        "key": "alt+enter shift+[", 
            "command": "editor.action.insertSnippet",
            "when": "editorLangId == 'markdown' && editorTextFocus || editorTextFocus && editorLangId == 'latex'",
            "args": {
                "name": "bigbrace"
            }
    }, 
    {
        "key": "alt+enter [", 
            "command": "editor.action.insertSnippet",
            "when": "editorLangId == 'markdown' && editorTextFocus || editorTextFocus && editorLangId == 'latex'",
            "args": {
                "name": "BigBracket"
            }
    }, 
    {
        "key": "alt+enter 9", 
            "command": "editor.action.insertSnippet",
            "when": "editorLangId == 'markdown' && editorTextFocus || editorTextFocus && editorLangId == 'latex'",
            "args": {
                "name": "parenthesis"
            }
    },
    
    {
        "key": "alt+enter shift+\\", 
            "command": "editor.action.insertSnippet",
            "when": "editorLangId == 'markdown' && editorTextFocus || editorTextFocus && editorLangId == 'latex'",
            "args": {
                "name": "Vert"
            }
    }, 
    {
        "key": "alt+enter \\", 
            "command": "editor.action.insertSnippet",
            "when": "editorLangId == 'markdown' && editorTextFocus || editorTextFocus && editorLangId == 'latex'",
            "args": {
                "name": "vert"
            }
    }, 
    {
        "key": "alt+enter shift+,", 
            "command": "editor.action.insertSnippet",
            "when": "editorLangId == 'markdown' && editorTextFocus || editorTextFocus && editorLangId == 'latex'",
            "args": {
                "name": "langle"
            }
    }, 
    {
        "key": "alt+enter ,", 
            "command": "editor.action.insertSnippet",
            "when": "editorLangId == 'markdown' && editorTextFocus || editorTextFocus && editorLangId == 'latex'",
            "args": {
                "snippet": "\\langle ${TM_SELECTED_TEXT}$0\\rangle"
            }
    }, 
    {
        "key": "alt+enter -", 
            "command": "editor.action.insertSnippet",
            "when": "editorLangId == 'markdown' && editorTextFocus || editorTextFocus && editorLangId == 'latex'",
            "args": {
                "name": "overline"
            }
    }, 
    {
        "key": "alt+enter shift+-", 
            "command": "editor.action.insertSnippet",
            "when": "editorLangId == 'markdown' && editorTextFocus || editorTextFocus && editorLangId == 'latex'",
            "args": {
                "name": "underline"
            }
    },
    

